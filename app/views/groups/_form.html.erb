<%= form_with(model: group, local: true, :class => 'col-6 m-auto' ) do |form| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- <h1 class="mb-4">Создание новой группы</h1> -->

  <div class="field form-group">
    <%= form.label "Начало обучения" %>
    <%= form.select :year_start, options_for_select([["2016"], ["2017"], ["2018"], ["2019"]]), {}, {:class => 'custom-select'}%>
  </div>

  <div class="field form-group">
    <%= form.label "Конец обучения" %>
    <%= form.select :year_end, options_for_select([["2020"], ["2021"], ["2022"], ["2023"]]), {}, {:class => 'custom-select'}%>
  </div>

  <div class="field form-group">
    <%= form.label "Название группы" %>
    <%= form.text_field :name, :class => 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label "Курс" %>
    <%= form.select :level_quantity, options_for_select([["1"], ["2"], ["3"], ["4"]]), {}, {:class => 'custom-select'}%>

  </div>

  <div class="field form-group">
    <%= form.label "Описание" %>
    <%= form.text_field :kind, :class => 'form-control' %>
  </div>

  <div class="form-group">
     <%= form.label "Обложка группы" %>
     <%= form.file_field :groupcover, :type => 'file', :class => 'form-control-file' %>
   </div>



   <div class="d-flex justify-content-between mt-4 mb-5">
        <%= link_to 'Назад', groups_path, :class => 'btn btn-outline-primary' %>
        <div class="actions">
          <%= form.submit 'Сохранить', :class => 'btn btn-primary' %>
          
        </div>
    </div>



<% end %>
