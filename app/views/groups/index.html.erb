<div class="d-flex justify-content-between align-items-center col-9 mr-auto ml-auto mt-4 mb-5">
  <h1 class="h1-index">Группы</h1>
  <div class="actions">
    <%= link_to 'Добавить группу', new_group_path, :class => 'btn btn-primary' %>
  </div>
</div>

<p id="notice"><%= notice %></p>


<div class="d-flex flex-wrap col-9 m-auto justify-content-between">
  <% @groups.each do |group| %>
    <div class="card mb-5" style="width: 18rem;">
      <img class="card-img-top" src="..//" alt="Обложка группы" <%= group.groupcover %>>
      <div class="card-body">
        <h5 class="card-title"> Название группы: <%= group.name %></h5>
        <p class="card-text">Начало обучения: <%= group.year_start %></p>
        <p class="card-text">Конец обучения: <%= group.year_end %></p>

        <p class="card-text">Курс: <%= group.level_quantity %></p>
        <p class="card-text">Описание: <%= group.kind %></p>
        <p class="card-text">Обложка группы: <%= group.groupcover %></p>
       </div>
      <div class="btn-group btn-group-toggle">
        <label class="btn btn-secondary active">
        <%= link_to 'Подробнее', group, :class => 'btn btn-primary btn-sm' %>
        <%= link_to 'Редактировать', group, :class => 'btn btn-secondary btn-sm' %>
        <%= link_to 'Удалить', group, :class => 'btn btn-primary btn-sm' %>
      </div>
      </div>
      </div>

    </div>
  <% end %>
</div>
